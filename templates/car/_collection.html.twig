{% block _car_images_widget %}
    <p>Ajouter des images</p>
    {{form_widget(form)}}
    <input type="hidden" id="widgets-counter" value="0">
    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">Ajouter une image</button>
    </div>
{% endblock %}
{% block _car_images_entry_row %}
{# entry pr√©cie le entry_type de notre CarType au niveau de la collection - donc chaque formulaire ImageType #}
{# permet de juste afficher le widget donc plus les 0 1 2 3 ect #}
    {{form_widget(form)}}
{% endblock %}
{% block _car_images_entry_widget %}
    <div class="form-group my-2" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{form_widget(form.url)}}
                        {{form_errors(form.url)}}
                    </div>
                    <div class="col">
                        {{form_widget(form.caption)}}
                        {{form_errors(form.caption)}}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">
                x</button>
            </div>
        </div>
    </div>
{% endblock %}